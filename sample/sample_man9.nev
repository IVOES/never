
func dir_deg(float d, float coeff) -> (float) -> float
{
    func fah2cel(float f) -> float
    {
        return coeff * ((f - 32) / 1.8);
    }
    
    func cel2fah(float c) -> float
    {
        return coeff * (c * 1.8 + 32);
    }

    return d == 0 ? cel2fah : fah2cel;
}

func main() -> float
{
    return dir_deg(0, 100)(100);
}

